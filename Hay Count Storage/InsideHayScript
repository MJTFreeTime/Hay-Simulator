-- Services
local Players = game:GetService("Players")

-- Variables
local hay = script.Parent
local timeToReappear = script.Parent.timeToReappear

local timeout = true

local function hayTouched(hit)
	if timeout == true then
		if hit.Parent:IsA("Model") and hit.Parent:FindFirstChild("Humanoid") then
			local player = Players:GetPlayerFromCharacter(hit.Parent)
			if player then
				timeout = false
				local hayCollected = player.leaderstats["Hay"]
				
				hayCollected.Value += 1
				
				hay.Transparency = 1
				wait(timeToReappear.Value)
				hay.Transparency = 0
				timeout = true
			end
		end
	end
end

hay.Touched:Connect(hayTouched)
